# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for MenschAergerDichNicht
GET		/       					 controllers.MenschController.mensch

GET     /newplayer/:index            controllers.MenschController.newPlayer(index: Int)

GET     /start                       controllers.MenschController.start

GET     /dicing                      controllers.MenschController.dicing

GET     /move/:id                    controllers.MenschController.move(id: Int)

GET     /newgame                     controllers.MenschController.newGame

GET     /about                       controllers.MenschController.about

GET     /json                       controllers.MenschController.playersToJson

GET     /websocket                  controllers.MenschController.socket

# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
